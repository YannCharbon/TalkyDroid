<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingVertical="10dp"
    android:paddingStart="15dp"
    android:paddingEnd="60dp"
    android:clipToPadding="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/conversation_avatar"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        app:cardCornerRadius="17dp"
        app:cardBackgroundColor="#FFFFFF">

        <androidx.cardview.widget.CardView
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:cardCornerRadius="17dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_unknown_user"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/user_image_received"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/conversation_avatar"
        android:layout_alignTop="@+id/conversation_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="@string/person_name"/>

    <TextView
        android:id="@+id/time_image_received"
        android:layout_toStartOf="@+id/image_received"
        android:layout_alignBottom="@+id/image_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        android:text="@string/time"/>

    <ImageView
        android:id="@+id/image_received"
        android:layout_width="250dp"
        android:maxWidth="250dp"
        android:minWidth="120dp"
        android:layout_height="wrap_content"
        android:maxHeight="250dp"
        android:minHeight="120dp"
        android:layout_below="@+id/user_image_received"
        android:layout_alignStart="@+id/user_image_received"
        android:background="@drawable/ic_bubble_message_received"
        android:adjustViewBounds="true"
        android:elevation="2dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        tools:src="@drawable/ic_baseline_insert_photo"/>
</RelativeLayout>