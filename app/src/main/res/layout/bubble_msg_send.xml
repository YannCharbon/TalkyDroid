<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingEnd="15dp"
    android:paddingStart="60dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/conversation_day_message_send"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:text="Day"
        android:paddingHorizontal="15dp"
        android:textColor="@color/colorMessageReceived"
        android:layout_marginVertical="10dp"
        android:background="@drawable/ic_baseline_date_background"/>

    <TextView
        android:id="@+id/message_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conversation_day_message_send"
        android:background="@drawable/ic_bubble_message_send"
        android:textColor="@color/colorMessageSend"
        android:padding="10dp"
        android:elevation="2dp"
        android:textSize="18sp"
        android:layout_alignParentEnd="true"
        android:text="@string/message_send"
        />

    <TextView
        android:id="@+id/time_message_send"
        android:layout_toStartOf="@+id/message_send"
        android:layout_alignBottom="@+id/message_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        android:text="@string/time"/>

</RelativeLayout>