<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingVertical="10dp"
    android:paddingEnd="15dp"
    android:paddingStart="60dp"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/image_send"
        android:layout_width="250dp"
        android:maxWidth="250dp"
        android:minWidth="120dp"
        android:layout_height="wrap_content"
        android:maxHeight="250dp"
        android:minHeight="120dp"
        android:background="@drawable/ic_bubble_message_send"
        android:padding="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:elevation="2dp"
        android:layout_alignParentEnd="true"
        tools:src="@drawable/ic_baseline_insert_photo"
        />

    <TextView
        android:id="@+id/time_image_send"
        android:layout_toStartOf="@+id/image_send"
        android:layout_alignBottom="@+id/image_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        android:text="@string/time"/>

</RelativeLayout>