<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingVertical="10dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/conversation_day_img_send"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:text="Day"
        android:paddingHorizontal="15dp"
        android:textColor="@color/colorMessageReceived"
        android:layout_marginVertical="10dp"
        android:background="@drawable/ic_baseline_date_background"/>

    <ImageView
        android:id="@+id/image_send"
        android:layout_width="250dp"
        android:maxWidth="250dp"
        android:minWidth="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conversation_day_img_send"
        android:maxHeight="250dp"
        android:minHeight="120dp"
        android:background="@drawable/ic_bubble_message_send"
        android:padding="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:elevation="2dp"
        android:layout_alignParentEnd="true"
        tools:src="@drawable/ic_baseline_insert_photo"
        />

    <TextView
        android:id="@+id/time_image_send"
        android:layout_toStartOf="@+id/image_send"
        android:layout_alignBottom="@+id/image_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        android:text="@string/time"/>

</RelativeLayout>