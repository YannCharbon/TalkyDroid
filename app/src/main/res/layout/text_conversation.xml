<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="#FFF">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        app:cardElevation="4dp"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/conversation_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:inputType="text"
                android:layout_marginStart="16dp"
                android:layout_marginVertical="16dp"
                android:background="@null"
                android:hint="@string/type_message"
                android:textColor="@color/typeMessageColor" />

            <ImageButton
                android:id="@+id/send_file_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:rotation="30"
                android:background="@drawable/ic_baseline_attach_file"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/send_message_button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="12dp"
        android:layout_marginVertical="8dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_send"
        android:background="@drawable/ic_baseline_send_background"
        tools:targetApi="m" />

</LinearLayout>